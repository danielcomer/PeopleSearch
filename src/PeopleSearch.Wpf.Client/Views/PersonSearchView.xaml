<UserControl x:Class="PeopleSearch.Wpf.Client.Views.PersonSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Jti.EcourtWordAddIn.UI.Controls"
             xmlns:entities="clr-namespace:PeopleSearch.Entities;assembly=PeopleSearch.Entities"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=PersonSearchViewModel}"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label>Search By Name:</Label>
            <TextBox Width="250" Margin="10,0,10,0" 
                     Text="{Binding SearchString, UpdateSourceTrigger=PropertyChanged}" MinWidth="100">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"></KeyBinding>
                </TextBox.InputBindings>
            </TextBox>
            <Button Command="{Binding SearchCommand}">Search</Button>
        </StackPanel>
        
        <Grid Grid.Row="1" Margin="5">
            <StackPanel VerticalAlignment="Center" 
                        d:IsHidden="True"
                        Visibility="{Binding People.IsNotCompleted, Converter={StaticResource BooleanToVisibilityConverter}}">
                <controls:CircularProgressBar />
                <Label HorizontalAlignment="Center">Loading</Label>
            </StackPanel>
            
            <ListBox ItemsSource="{Binding Path=People.Result}" 
                     Visibility="{Binding People.IsSuccessfullyCompleted, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type entities:Person}">
                        <TextBlock Text="{Binding FirstName}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
